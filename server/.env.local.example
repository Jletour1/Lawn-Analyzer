# Local Development Environment Variables
# Copy this file to server/.env.local for local development

# Server Configuration
NODE_ENV=development
PORT=3001

# Local Database Configuration
DATABASE_URL=postgresql://lawnanalyzer:password123@localhost:5432/lawnanalyzer_dev

# Local Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration (Development Only)
JWT_SECRET=your-local-jwt-secret-key-for-development-only-make-it-long
JWT_EXPIRES_IN=7d

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_PROJECT=your-openai-project-id-here

# Reddit API Configuration (Optional)
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=lawn_analyzer_dev_v1.0_by_/u/yourusername

# Local File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Email Configuration (Optional for development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Development Flags
ENABLE_LOGGING=true
LOG_LEVEL=debug