# Production Environment Variables for AWS Deployment
# Copy this file to .env.production and update with your actual values

# Server Configuration
NODE_ENV=production
PORT=3001

# Database Configuration (Replace with your RDS endpoint)
DATABASE_URL=postgresql://lawnanalyzer:YOUR_DB_PASSWORD@your-db-endpoint.rds.amazonaws.com:5432/lawnanalyzer

# Redis Configuration (Replace with your ElastiCache endpoint)
REDIS_URL=redis://your-redis-endpoint.cache.amazonaws.com:6379

# JWT Configuration (Generate a strong secret)
JWT_SECRET=your-super-long-random-jwt-secret-key-for-production-make-it-very-secure
JWT_EXPIRES_IN=7d

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_PROJECT=your-openai-project-id-here

# Reddit API Configuration (Optional)
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=lawn_analyzer_production_v1.0_by_/u/yourusername

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET=your-production-s3-bucket-name
CLOUDFRONT_URL=https://your-cloudfront-distribution.cloudfront.net

# Email Configuration (Optional but recommended)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ADMIN_EMAIL=admin@yourdomain.com

# Frontend Configuration
FRONTEND_URL=https://yourdomain.com
ADMIN_URL=https://admin.yourdomain.com

# Security Configuration
CORS_ORIGIN=https://yourdomain.com,https://admin.yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Configuration (Optional)
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=info

# Feature Flags
ENABLE_REDDIT_COLLECTION=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ADMIN_ALERTS=true